{
  "manifest_version": 3,
  "name": "X Article to PDF",
  "version": "1.0.0",
  "description": "Export Twitter/X threads or articles to a printable PDF view.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
	"default_icon": {
      "16": "icons/x-to-pdf.png",
      "32": "icons/x-to-pdf.png",
      "48": "icons/x-to-pdf.png",
      "128": "icons/x-to-pdf.png"
    },
    "default_title": "Export X article to PDF"
  },
  "icons": {
    "16": "icons/x-to-pdf.png",
    "128": "icons/x-to-pdf.png"
  }
}
